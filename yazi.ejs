      </form>
      </div>

      <script>
        function base64Resim(){
          var reader = new FileReader();
          var file2 = document.getElementById("file").files[0];
          reader.readAsDataURL(file2);
          reader.onload = function () {
          
            $("#gorsel").val(reader.result);
            console.log($("#gorsel").val());
          };
        }
  
      </script>