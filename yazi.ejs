<div class="container" style="margin-top:100px">
<form name="form2" id="form2"  action="/login/yazi" class="form-horizontal"  method="POST">

  <div class="form-group">
      <label for="exampleTextarea">Metin başlığı ekle</label>
      <textarea class="form-control" id="exampleTextarea" rows="1" name="baslik"  placeholder="Başlık"></textarea>
    </div>
        <div class="form-group">
          <label for="exampleTextarea">Yeni metin ekle</label>
          <textarea class="form-control" id="exampleTextarea" rows="11" name="metin"  placeholder="Metin..."></textarea>
        </div>
        
