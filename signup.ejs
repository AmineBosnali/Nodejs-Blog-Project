
<div class="container" style="margin-top:100px">

<div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

    <div class="row">
            <div class="col-md-offset-4">
        <img src="/public/Avatar.png" alt="user"  width="200" height="200" >
    </div>
    </div>

    <div class="panel panel-default" >
        <div class="panel-heading">
            <div class="panel-title text-center">Kayıt Paneli</div>
        </div>

        <div class="panel-body" >

            <form name="form" id="form"  action="/login/signup" class="form-horizontal"  method="POST">
               <!--Ad-->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="user" type="text" class="form-control" name="ad"  placeholder="Ad">
                </div>
               <!--Soyad-->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="password" type="text" class="form-control" name="soyad" placeholder="Soyad">
                </div>
                <!--kullaniciAdi-->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="user" type="text" class="form-control" name="kullaniciAdi"  placeholder="Kullanıcı Adı">
                </div>
                <!--email-->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="user" type="text" class="form-control" name="email"  placeholder="email">
                </div>
               <!--sifre-->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="password" type="text" class="form-control" name="sifre" placeholder="Şifre">
                </div>

                <div class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <input type="submit" class="btn btn-success" value="Kayıt Ol">
                        <a href="/login" class="btn btn-warning">Giriş Yap</a>
                    </div>

                </div>

            </form>
          <div class="alert alert-<%=classIsmi%>" role="alert"><%=mesaj%></div>
        </div>
    </div>
</div>
</div>
