<h2>Yazı Listesi</h2>

<div class="container" style="margin-top:100px">
    <table class="table table-hover">
        
        <thead>
          <tr>
            <th>#</th>
            <th>Başlık</th>            
            <th>Metin</th>
            <th>İşlemler</th>
           
          </tr>
        </thead>

        <tbody>

            <%for(var i=0;i<yazilar.length;i++){%>

                <%if(i%2==0){%>
                    <tr class="info">
                <%}else{%>
                    <tr class="warning">
                <%}%>
          
            <th><%=i+1%></th>
            
            <th><%=yazilar[i].baslik%></th>
            <th><%=yazilar[i].metin%></th>
          
            <th><a href="/login/yaziSil/<%=yazilar[i].metin%>">Sil</a></th>

         
          </tr>
            <%}%>
          
        </tbody>

    </table>
</div>